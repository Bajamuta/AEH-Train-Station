@page
@model TrainStation.Pages.Car.EditModel

@{
    ViewData["Title"] = "Car edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Car.ID" />
            <div class="form-group">
                <label asp-for="Car.Name" class="control-label"></label>
                <input asp-for="Car.Name" class="form-control" />
                <span asp-validation-for="Car.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.ProductionDate" class="control-label"></label>
                <input asp-for="Car.ProductionDate" class="form-control" />
                <span asp-validation-for="Car.ProductionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Sitting" class="control-label"></label>
                <input asp-for="Car.Sitting" class="form-control" />
                <span asp-validation-for="Car.Sitting" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Standing" class="control-label"></label>
                <input asp-for="Car.Standing" class="form-control" />
                <span asp-validation-for="Car.Standing" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Car.Available" /> @Html.DisplayNameFor(model => model.Car.Available)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

