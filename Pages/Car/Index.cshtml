@page
@model TrainStation.Pages.Car.IndexModel

@{
    ViewData["Title"] = "Cars' list";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Cars' list</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].ProductionDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].Sitting)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].Standing)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].Available)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Car) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sitting)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Standing)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Available)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
