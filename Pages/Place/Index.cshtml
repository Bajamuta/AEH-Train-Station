@page
@model TrainStation.Pages.Place.IndexModel

@{
    ViewData["Title"] = "Places' list";
}

<h1>Places' list</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Place[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Place[0].PostalCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Place[0].TravelTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Place) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostalCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TravelTime.Hours)h 
                @Html.DisplayFor(modelItem => item.TravelTime.Minutes)min
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
