@page
@model TrainStation.Pages.Ride.IndexModel

@{
    ViewData["Title"] = "Rides' list";
}

<h1>Rides' list</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ride[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ride[0].Driver)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ride[0].Engine)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Ride) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Driver.Name)
                @Html.DisplayFor(modelItem => item.Driver.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Engine.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
