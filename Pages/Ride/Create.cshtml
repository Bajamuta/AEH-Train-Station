@page
@model TrainStation.Pages.Ride.CreateModel

@{
    ViewData["Title"] = "Ride create";
}

<h1>Create</h1>

<h4>Ride</h4>
<hr/>
<div class="row">
    <div class="col-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Ride.Name" class="control-label"></label>
                <input asp-for="Ride.Name" class="form-control"/>
                <span asp-validation-for="Ride.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ride.EngineId" class="control-label"></label>
                <select asp-for="Ride.EngineId" class="form-control" asp-items="Model.Engines"></select>
            </div>
            <div class="form-group">
                <label asp-for="Ride.DriverId" class="control-label"></label>
                <select asp-for="Ride.DriverId" class="form-control" asp-items="Model.Employees"></select>
            </div>
            <div class="form-group">
                <label asp-for="Ride.Conductors" class="control-label"></label>
                <div class="row">
                    <div class="col-4">
                        <h4>ALREADY IN THE RIDE</h4>
                        <select name="selectedConductorIdRide" size="8" class="form-control" asp-items="Model.ListRideConductors">
                            <option value="" disabled>--- Select Conductor ---</option>
                        </select>
                        <button asp-page-handler="deleteConductor" class="btn btn-outline-primary">Remove</button>
                    </div>
                    <div class="col-4">
                        <h4>AVAILABLE CONDUCTORS</h4>
                        <select name="selectedConductorIdAvailable" size="8" class="form-control" asp-items="Model.ListAvailableConductors">
                            <option value="" disabled>--- Select Conductor ---</option>
                        </select>
                        <button asp-page-handler="addConductor" class="btn btn-outline-primary">Add</button>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Ride.Cars" class="control-label"></label>
                <div class="row">
                    <div class="col-4">
                        <h4>ALREADY IN THE RIDE</h4>
                        <select name="selectedCarId" size="8" asp-for="SelectedCarId" class="form-control" asp-items="Model.ListRideCars">
                            <option value="" disabled>--- Select Car ---</option>
                        </select>
                        <button asp-page-handler="deleteCar" class="btn btn-outline-primary">Remove</button>
                    </div>
                    <div class="col-4">
                        <h4>AVAILABLE CARS</h4>
                        <select name="selectedCarId" size="8" asp-for="SelectedCarId" class="form-control" asp-items="Model.ListAvailableCars">
                            <option value="" disabled>--- Select Car ---</option>
                        </select>
                        <button asp-page-handler="addCar" class="btn btn-outline-primary">Add</button>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>