@page
@model TrainStation.Pages.Engine.CreateModel

@{
    ViewData["Title"] = "Engine create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Engine</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Engine.Name" class="control-label"></label>
                <input asp-for="Engine.Name" class="form-control" />
                <span asp-validation-for="Engine.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Engine.ProductionDate" class="control-label"></label>
                <input asp-for="Engine.ProductionDate" class="form-control" />
                <span asp-validation-for="Engine.ProductionDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Engine.Available" /> @Html.DisplayNameFor(model => model.Engine.Available)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

